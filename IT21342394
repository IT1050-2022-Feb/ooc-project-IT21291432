//Payment class
class Payment{

    private :
        string paymentID;
        double Amount;

    public :
        Payment();
        Payment(string ppaymentID,double pAmount);
        void DisplayPaymentDetails();
        double calAmount();
        void DisplayAmount();
        ~Payment();

};

//Equipment class
